{
    "manifest_version": 2,
    "name": "Opal",
    "description": "Collect favourite URLs and search and sort them.",
    "version": "1.0",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "bookmarks",
        "http://*/*", 
        "https://*/*"
    ]
}